<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.laughingather.gulimall.admin.mapper.SysPermissionMapper">
    <resultMap id="permissionsWithTreeVOMap" type="com.laughingather.gulimall.admin.entity.vo.PermissionsWithTreeVO">
        <id property="permissionId" column="permission_id"/>
        <result property="permissionName" column="permission_name"/>
        <result property="permissionValue" column="permission_value"/>
        <result property="path" column="path"/>
        <result property="parentId" column="parent_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <update id="updatePermissionEnable">
        UPDATE sys_permission
        <set>
            enable = #{enable},
        </set>
        WHERE permission_id = #{permissionId}
    </update>

    <!-- 查询已启用的权限列表 -->
    <select id="selectPermissionsVO" resultMap="permissionsWithTreeVOMap">
        SELECT permission_id, permission_name, permission_value, path, parent_id, create_time
        FROM sys_permission
        WHERE enable = 1
    </select>
</mapper>